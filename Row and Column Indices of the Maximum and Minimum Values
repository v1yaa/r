mat <- matrix(c(10, 25, 7, 40, 15, 33, 2, 19, 50), nrow = 3, byrow = TRUE)
print("Matrix:")
print(mat)
max_index <- which(mat == max(mat), arr.ind = TRUE)
min_index <- which(mat == min(mat), arr.ind = TRUE)
cat("Maximum value:", max(mat), "\n")
cat("Located at row:", max_index[1], "column:", max_index[2], "\n\n")
cat("Minimum value:", min(mat), "\n")
cat("Located at row:", min_index[1], "column:", min_index[2], "\n")
