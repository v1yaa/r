a <- as.numeric(readline("Enter first number: "))
b <- as.numeric(readline("Enter second number: "))
if (is.na(a) || is.na(b)) {
  cat("Error: Enter valid numbers.\n")
} else {
  cat("Addition:", a + b, "\nSubtraction:", a - b, 
      "\nMultiplication:", a * b, 
      "\nDivision:", ifelse(b != 0, a / b, "Error (division by zero)"), "\n")
}
